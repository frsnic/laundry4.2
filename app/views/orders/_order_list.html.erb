<table class="table">
  <thead>
    <tr>
      <th style="width:  50px;">單號</th>
      <th style="width: 100px;">送洗日期</th>
      <th style="width: 100px;">餘額</th>
      <th style="width: 200px;">備註</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr order_id="<%= order.id %>">
        <td><%= order.id %></td>
        <td><%= order.created_at %></td>
        <td><%= order.balance %></td>
        <td><%= order.annotate %></td>
      </tr>
    <% end %>
  </tbody>
</table>